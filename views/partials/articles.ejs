<article class="col-12 col-md-6 tm-post">
  <hr class="tm-hr-primary" />
  <%#=postA.image.slice(7) %>
  <a href="/blog/<%-postA._id%>" class="effect-lily tm-post-link tm-pt-60">
    <div class="tm-post-link-inner">
      <img src="<%-postA.image.slice(7) %>" alt="Image" class="img-fluid" />
    </div>
    <span class="position-absolute tm-new-badge">New</span>
    <h2 class="tm-pt-30 tm-color-primary tm-post-title"><%=postA.title %></h2>
  </a>
  <p class="tm-pt-30"><%=postA.summary %></p>
  <div class="d-flex justify-content-between tm-pt-45">
    <!-- <span class="tm-color-primary">Travel . Events</span> -->
    <span class="tm-color-primary"><%=postA.createdAt.toDateString() %></span>
  </div>
  <hr />
  <div class="d-flex justify-content-between">
    <!-- <span>36 comments</span> -->
    <span>Uploaded by: <%=postA.author %></span>
  </div>
</article>
